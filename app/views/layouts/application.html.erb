      window.signup_image2 = "<%= image_url('signup_image2') %>"
      window.signup_image3 = "<%= image_url('signup_image3') %>"
      window.signup_image4 = "<%= image_url('signup_image4') %>"
      window.signup_image5 = "<%= image_url('signup_image5') %>"
